@model IEnumerable<CollegeChemistryLibrary.Entities.Lessons>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int count = 1;
}

<div class="container">
    <div class="d-flex align-items-center justify-content-between mb-4 flex-wrap">
        <h1 class="mb-3">Lessons</h1>
        <a class="btn btn-primary" asp-area="" asp-controller="Lessons" asp-action="AddUpdateLesson">
            <i class="fa fa-plus me-2"></i>Add Lesson
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>#</th>
                    <th>Title</th>
                    <th>Youtube Video Link</th>
                    <th>Cover Picture</th>
                    <th>Edit/Delete</th>
                    <th>Published</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    @foreach (var lesson in Model)
                    {
                        <tr>
                            <td>@count</td>
                            <td>@lesson.title</td>
                            <td>
                                <a href="@lesson.youtube_video" target="_blank">Video</a>
                            </td>
                            <td>
                                @if (lesson.cover_picture != null && lesson.cover_picture.Length > 0)
                                {
                                    <img src="data:image/png;base64,@Convert.ToBase64String(lesson.cover_picture)" alt="Cover Picture" class="img-fluid" style="height:100px;width:100px" />
                                }
                                else
                                {
                                    <span>No Cover Picture</span>
                                }
                            </td>
                            <td>
                                <div class="table-actions d-flex">
                                    <a class="btn btn-sm btn-warning me-2" asp-area="" asp-controller="Lessons" asp-action="AddUpdateLesson" asp-route-id="@lesson.id">
                                        <img src="~/assets/img/edit.svg" alt="edit">
                                    </a>
                                    <a class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#delete-item" onclick="DeleteLessons('@lesson.id')" data-service-id="@lesson.id">
                                        <img src="~/assets/img/delete.svg" alt="delete">
                                    </a>
                                </div>
                            </td>
                            <td>
                                <form asp-area="" asp-controller="Lessons" asp-action="Publish_Unpublish_Lesson">
                                    <input type="hidden" name="id" value="@lesson.id" />
                                    <input type="hidden" name="ispublish" value="@(lesson.ispublish ? " false" : "true")"  />
                                    <button type="submit" class="btn btn-sm @(lesson.ispublish ? "btn-danger" : "btn-success")">
                                        <i class="fa @(lesson.ispublish ? "fa-times" : "fa-check")"></i>
                                        @(lesson.ispublish ? "Unpublish" : "Publish")
                                    </button>
                                </form>
                            </td>

                        </tr>
                        count++;
                    }
                }
                else
                {
                    <tr>
                        <td colspan="9" class="text-center">No Lessons available</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


<!-- Delete -->
<div class="modal fade" id="delete-item" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered ">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Delete Lesson</h5>
                <button type="button" class="btn-close close-modal" data-bs-dismiss="modal" aria-label="Close">
                    <i class="fe fe-x"></i>
                </button>
            </div>
            <form asp-area="" asp-controller="Lessons" asp-action="DeleteLesson">
                <div class="modal-body py-0">
                    <div class="del-modal">
                        <p>Are you sure want to Delete this Lesson?</p>
                        <input type="hidden" id="Lesson_ID_Delete" name="id" />
                    </div>
                </div>
                <div class="modal-footer pt-0">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Yes</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>

    function DeleteLessons(id) {
        $("#Lesson_ID_Delete").val(id);
    }
</script>


