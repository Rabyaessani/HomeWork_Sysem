@model IEnumerable<CollegeChemistryLibrary.Entities.MCQs>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int count = 1;
}

<div class="container">
    <div class="d-flex align-items-center justify-content-between mb-4 flex-wrap">
        <h1 class="mb-3">MCQs</h1>
        <a class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#add-mcq">
            <i class="fa fa-plus me-2"></i>Add MCQ
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>#</th>
                    <th>MCQ's Type</th>
                    <th>Edit/Delete</th>
                    <th>Published</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    @foreach (var mcq in Model)
                    {
                        <tr>
                            <td>@count</td>
                            <td>@Html.Raw(TruncateWords(mcq.title, 6))</td>
                            <td>
                                <div class="table-actions d-flex">
                                    <a class="btn btn-sm btn-warning me-2" data-bs-toggle="modal" data-bs-target="#update-mcq" onclick="EditQuestion('@mcq.id', '@mcq.title')">
                                        <img src="~/assets/img/edit.svg" alt="edit">
                                    </a>
                                    <a class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#delete-item" onclick="DeleteQuestion('@mcq.id')" data-service-id="@mcq.id">
                                        <img src="~/assets/img/delete.svg" alt="delete">
                                    </a>
                                </div>
                            </td>
                            <td>
                                <form asp-area="" asp-controller="MCQs" asp-action="Publish_Unpublish_MCQs">
                                    <input type="hidden" name="id" value="@mcq.id" />
                                    <input type="hidden" name="ispublish" value="@(mcq.ispublish ? " false" : "true")" />
                                    <button type="submit" class="btn btn-sm @(mcq.ispublish ? "btn-danger" : "btn-success")">
                                        <i class="fa @(mcq.ispublish ? "fa-times" : "fa-check")"></i>
                                        @(mcq.ispublish ? "Unpublish" : "Publish")
                                    </button>
                                </form>
                            </td>

                        </tr>
                        count++;
                    }
                }
                else
                {
                    <tr>
                        <td colspan="9" class="text-center">No Questions available</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>

<!-- Add MCQ Modal -->
<div class="modal fade" id="add-mcq" tabindex="-1" aria-labelledby="addMCQLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addMCQLabel">Add MCQ </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-area="" asp-controller="MCQs" asp-action="InsertMCQ">
                <div class="modal-body">
                    <div class="col-md-12 mb-2">
                        <div class="form-group">
                            <label for="title">MCQ Type | Category</label>
                            <input type="text" class="form-control" id="mcqTitle" placeholder="Enter MCQ" name="title" required>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Add</button>
                </div>
            </form>
        </div>
    </div>
</div>


<!-- Update MCQ Modal -->
<div class="modal fade" id="update-mcq" tabindex="-1" aria-labelledby="updateMCQLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="updateMCQLabel">Update MCQ</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-area="" asp-controller="MCQs" asp-action="UpdateMCQ">
                <div class="modal-body">
                    <input type="hidden" id="mcqId" name="id" />

                    <div class="col-md-12 mb-2">
                        <div class="form-group">
                            <label for="updateTitle">MCQ Type</label>
                            <input type="text" class="form-control" id="updateTitle"  name="title" required>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Update </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Delete -->
<div class="modal fade" id="delete-item" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered ">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Delete MCQ </h5>
                <button type="button" class="btn-close close-modal" data-bs-dismiss="modal" aria-label="Close">
                    <i class="fe fe-x"></i>
                </button>
            </div>
            <form asp-area="" asp-controller="MCQs" asp-action="DeleteMCQ">
                <div class="modal-body py-0">
                    <div class="del-modal">
                        <p>Are you sure want to Delete this MCQ Type?</p>
                        <input type="hidden" id="Question_ID_Delete" name="id" />
                    </div>
                </div>
                <div class="modal-footer pt-0">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Yes</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>

    function DeleteQuestion(id) {
        $("#Question_ID_Delete").val(id);
    }

    function EditQuestion(id, title) {
        $("#mcqId").val(id);
        $("#updateTitle").val(title);
    }
</script>

@functions {
    public static string TruncateWords(string input, int wordLimit)
    {
        if (string.IsNullOrEmpty(input)) return input;

        var words = input.Split(' ');
        if (words.Length <= wordLimit) return input;

        return string.Join(" ", words.Take(wordLimit)) + " ... ";
    }
}


