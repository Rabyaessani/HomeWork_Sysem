@model IEnumerable<CollegeChemistryLibrary.Entities.Blogs> 

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int count = 1;
}

<div class="container">
    <div class="d-flex align-items-center justify-content-between mb-4 flex-wrap">
      <h1 class="mb-8">Blogs</h1>
      <a class="btn btn-primary" asp-area="" asp-controller="Blogs" asp-action="AddUpdateBlog">
        <i class="fa fa-plus me-2"></i>Add Blogs
      </a>
    </div>

  <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
            <tr>
               <th>#</th>
               <th>Title</th>
               <th>Content</th>
               <th>Cover Picture</th>
               <th>Edit/Delete</th>
               <th>Publish</th>
            </tr>
            </thead>
      <tbody> 

        @if (Model.Any()) 
        {
            @foreach (var blog in Model)
            {
                <tr>
                    <td>@count</td>
                    <td>@blog.title</td>
                    <td>
                        @if (!string.IsNullOrEmpty(blog.content))
                        {
                            @Html.Raw(TruncateWords(blog.content, 3));
                            <a style="font-size:0.75rem" class="" asp-area="" asp-controller="Blogs" asp-action="AddUpdateBlog" asp-route-id="@blog.id">
                                Read More
                            </a>
                        }
                        else
                        {
                            <span>No Content Available</span>
                        }
                    </td>
                    <td>
                        @if (blog.cover_picture != null && blog.cover_picture.Length > 0)
                        {
                                    <img src="data:image/png;base64,@Convert.ToBase64String(blog.cover_picture)" alt="Cover Picture" class="img-fluid" style="max-height:100px" />
                        }
                        else
                        {
                            <span>No Cover Picture</span>
                        }
                    </td>
                    <td>
                        <div class="table-actions d-flex">
                                    <a class="btn btn-sm btn-warning me-2" asp-area="" asp-controller="Blogs" asp-action="AddUpdateBlog" asp-route-id="@blog.id">
                                <img src="~/assets/img/edit.svg" alt="edit">
                            </a>
                                    <a class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#delete-item" onclick="DeleteBlog('@blog.id')" data-service-id="@blog.id">
                                <img src="~/assets/img/delete.svg" alt="delete">
                            </a>
                          
                        </div>
                    </td>
                            <td>
                                <form asp-area="" asp-controller="Blogs" asp-action="Publish_Unpublish_Blogs">
                                    <input type="hidden" name="id" value="@blog.id" />
                                    <input type="hidden" name="ispublish" value="@(blog.ispublish ? " false" : "true")" />
                                    <button type="submit" class="btn btn-sm @(blog.ispublish ? "btn-danger" : "btn-success")">
                                        <i class="fa @(blog.ispublish ? "fa-times" : "fa-check")"></i>
                                        @(blog.ispublish ? "Unpublish" : "Publish")
                                    </button>
                                </form>
                            </td>
                </tr>
                count++;
            }
        }
        else
        {
            <tr>
                <td colspan="7" class="text-center">No blogs available</td>
            </tr>
        }
    </tbody>
</table>
  </div>
</div>

<!-- Delete -->
<div class="modal fade" id="delete-item" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered ">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Delete Blog</h5>
                <button type="button" class="btn-close close-modal" data-bs-dismiss="modal" aria-label="Close">
                    <i class="fe fe-x"></i>
                </button>
            </div>
            <form asp-area="" asp-controller="Blogs" asp-action="DeleteBlog">
                <div class="modal-body py-0">
                    <div class="del-modal">
                        <p>Are you sure want to Delete this Blog?</p>
                        <input type="hidden" id="Blog_ID_Delete" name="id" />
                    </div>
                </div>
                <div class="modal-footer pt-0">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Yes</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    
    function DeleteBlog(id) {
        $("#Blog_ID_Delete").val(id);
    }
</script>

@functions {
    public static string TruncateWords(string input, int wordLimit)
    {
        if (string.IsNullOrEmpty(input)) return input;

        var words = input.Split(' ');
        if (words.Length <= wordLimit) return input;

        return string.Join(" ", words.Take(wordLimit)) + " ... ";
    }
}
