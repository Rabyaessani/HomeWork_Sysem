@model IEnumerable<CollegeChemistryLibrary.Entities.Blogs> 

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex align-items-center justify-content-between mb-4">
    <h1 class="mb-8">Blogs</h1>
     <a class="btn btn-primary" asp-area="" asp-controller="Blogs" asp-action="AddBlog">
        <i class="fa fa-plus me-2"></i>Add Blogs
    </a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Content</th>
            <th>Created At</th>
            <th>Updated At</th>
            <th>Published At</th>
            <th>Published</th>
            <th>Cover Picture</th>
            <th>Edit/Delete</th>
        </tr>
    </thead>
    <tbody>

        @if (Model.Any()) 
        {
            @foreach (var blog in Model)
            {
                <tr>
                    <td>@blog.title</td>
                    <td>
                        @if (!string.IsNullOrEmpty(blog.content))
                        {
                            @blog.content
                        }
                        else
                        {
                            <span>No Content Available</span>
                        }
                    </td>
                    <td>@blog.created_at?.ToString("MM/dd/yyyy")</td>
                    <td>@blog.updated_at?.ToString("MM/dd/yyyy")</td>
                    <td>@(blog.published_at.HasValue ? blog.published_at.Value.ToString("MM/dd/yyyy") : "Not Published")</td>
                    <td>@(blog.ispublish ? "Yes" : "No")</td>
                    <td>
                        @if (blog.cover_picture != null && blog.cover_picture.Length > 0)
                        {
                            <img src="data:image/png;base64,@Convert.ToBase64String(blog.cover_picture)" alt="Cover Picture" style="max-width: 150px;" />
                        }
                        else
                        {
                            <span>No Cover Picture</span>
                        }
                    </td>
                    <td>
                        <div class="table-actions d-flex">
                            <a class="delete-table me-2" asp-area="" asp-controller="Blogs" asp-action="AddBlog" asp-route-id="@blog.id">
                                <img src="~/assets/img/edit.svg" alt="edit">
                            </a>
                            <a class="delete-table" data-bs-toggle="modal" data-bs-target="#delete-item" onclick="DeleteBlog('@blog.id')" data-service-id="@blog.id">
                                <img src="~/assets/img/delete.svg" alt="delete">
                            </a>
                          
                        </div>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="7" class="text-center">No blogs available</td>
            </tr>
        }
    </tbody>
</table>


<!-- Delete -->
<div class="modal fade" id="delete-item" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered ">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Delete Blog</h5>
                <button type="button" class="btn-close close-modal" data-bs-dismiss="modal" aria-label="Close">
                    <i class="fe fe-x"></i>
                </button>
            </div>
            <form asp-area="" asp-controller="Blogs" asp-action="DeleteBlog">
                <div class="modal-body py-0">
                    <div class="del-modal">
                        <p>Are you sure want to Delete this Blog?</p>
                        <input type="hidden" id="Blog_ID_Delete" name="id" />
                    </div>
                </div>
                <div class="modal-footer pt-0">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Yes</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    function DeleteBlog(id) {
        $("#Blog_ID_Delete").val(id);

    }
</script>
