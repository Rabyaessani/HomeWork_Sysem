@model IEnumerable<CollegeChemistryLibrary.Entities.Questions>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int count = 1;
}

<div class="container">
    <div class="d-flex align-items-center justify-content-between mb-4 flex-wrap">
        <h1 class="mb-3">Questions</h1>
        <a class="btn btn-primary" asp-area="" asp-controller="Questions" asp-action="AddUpdateQuestion">
            <i class="fa fa-plus me-2"></i>Add Question
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>#</th>
                    <th>Question</th>
                    <th>Correct Option</th>
                    <th>Edit/Delete</th>
                    <th>Published</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    @foreach (var question in Model)
                    {
                        <tr>
                            <td>@count</td>
                            <td>@Html.Raw(TruncateWords(question.question, 6))</td>
                            <td>@question.correct_option</td>
                            <td>
                                <div class="table-actions d-flex">
                                    <a class="btn btn-sm btn-warning me-2" asp-area="" asp-controller="Questions" asp-action="AddUpdateQuestion" asp-route-id="@question.id">
                                        <img src="~/assets/img/edit.svg" alt="edit">
                                    </a>
                                    <a class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#delete-item" onclick="DeleteQuestion('@question.id')" data-service-id="@question.id">
                                        <img src="~/assets/img/delete.svg" alt="delete">
                                    </a>
                                </div>
                            </td>
                            <td>
                                <form asp-area="" asp-controller="Questions" asp-action="Publish_Unpublish_Questions">
                                    <input type="hidden" name="id" value="@question.id" />
                                    <input type="hidden" name="ispublish" value="@(question.ispublish ? " false" : "true")" />
                                    <button type="submit" class="btn btn-sm @(question.ispublish ? "btn-danger" : "btn-success")">
                                        <i class="fa @(question.ispublish ? "fa-times" : "fa-check")"></i>
                                        @(question.ispublish ? "Unpublish" : "Publish")
                                    </button>
                                </form>
                            </td>

                        </tr>
                        count++;
                    }
                }
                else
                {
                    <tr>
                        <td colspan="9" class="text-center">No Questions available</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>


<!-- Delete -->
<div class="modal fade" id="delete-item" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered ">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Delete Question</h5>
                <button type="button" class="btn-close close-modal" data-bs-dismiss="modal" aria-label="Close">
                    <i class="fe fe-x"></i>
                </button>
            </div>
            <form asp-area="" asp-controller="Questions" asp-action="DeleteQuestion">
                <div class="modal-body py-0">
                    <div class="del-modal">
                        <p>Are you sure want to Delete this Question?</p>
                        <input type="hidden" id="Question_ID_Delete" name="id" />
                    </div>
                </div>
                <div class="modal-footer pt-0">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Yes</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>

    function DeleteQuestion(id) {
        $("#Question_ID_Delete").val(id);
    }
</script>

@functions {
    public static string TruncateWords(string input, int wordLimit)
    {
        if (string.IsNullOrEmpty(input)) return input;

        var words = input.Split(' ');
        if (words.Length <= wordLimit) return input;

        return string.Join(" ", words.Take(wordLimit)) + " ... ";
    }
}


