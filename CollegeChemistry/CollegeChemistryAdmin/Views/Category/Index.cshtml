@model IEnumerable<CollegeChemistryLibrary.Entities.Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="d-flex align-items-center justify-content-between mb-4 flex-wrap">
        <h1 class="mb-3">Category</h1>
        <a class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#add-category">
            <i class="fa fa-plus me-2"></i>Add Category
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>CategoryId</th>
                    <th>Category</th>
                    <th>Edit/Delete</th>
                    <th>Published</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    @foreach (var category in Model)
                    {
                        <tr>
                            <td>@category.id</td>
                            <td>@category.category_name</td>
                            <td>
                                <div class="table-actions d-flex">
                                    <a class="btn btn-sm btn-warning me-2" data-bs-toggle="modal" data-bs-target="#update-category" onclick="EditCategory('@category.id', '@category.category_name')">
                                        <img src="~/assets/img/edit.svg" alt="edit">
                                    </a>
                                    <a class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#delete-item" onclick="DeleteCategory('@category.id')" data-service-id="@category.id">
                                        <img src="~/assets/img/delete.svg" alt="delete">
                                    </a>
                                </div>
                            </td>
                            <td>
                                <form asp-area="" asp-controller="Category" asp-action="Publish_Unpublish_Category">
                                    <input type="hidden" name="id" value="@category.id" />
                                    <input type="hidden" name="ispublish" value="@(category.ispublish ? " false" : "true")" />
                                    <button type="submit" class="btn btn-sm @(category.ispublish ? "btn-danger" : "btn-success")">
                                        <i class="fa @(category.ispublish ? "fa-times" : "fa-check")"></i>
                                        @(category.ispublish ? "Unpublish" : "Publish")
                                    </button>
                                </form>
                            </td>

                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="9" class="text-center">No Category available</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>

<!-- Add Category Modal -->
<div class="modal fade" id="add-category" tabindex="-1" aria-labelledby="addCategoryLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addCategoryLabel">Add Category</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-area="" asp-controller="Category" asp-action="InsertCategory">
                <div class="modal-body">
                    <div class="col-md-12 mb-2">
                        <div class="form-group">
                            <label for="title">Category</label>
                            <input type="text" class="form-control" id="categoryTitle" placeholder="Enter Category Name" name="category_name" required>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Add Category</button>
                </div>
            </form>
        </div>
    </div>
</div>


<!-- Update Category Modal -->
<div class="modal fade" id="update-category" tabindex="-1" aria-labelledby="updateCategoryLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="updateCategoryLabel">Update Category</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-area="" asp-controller="Category" asp-action="UpdateCategory">
                <div class="modal-body">
                    <input type="hidden" id="categoryId" name="id" />

                    <div class="col-md-12 mb-2">
                        <div class="form-group">
                            <label for="updateTitle">Category Name</label>
                            <input type="text" class="form-control" id="updateTitle" name="category_name" required>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Update Category</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Delete -->
<div class="modal fade" id="delete-item" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered ">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Delete Category Title</h5>
                <button type="button" class="btn-close close-modal" data-bs-dismiss="modal" aria-label="Close">
                    <i class="fe fe-x"></i>
                </button>
            </div>
            <form asp-area="" asp-controller="Category" asp-action="DeleteCategory">
                <div class="modal-body py-0">
                    <div class="del-modal">
                        <p>Are you sure want to Delete this Category Title?</p>
                        <input type="hidden" id="Category_ID_Delete" name="id" />
                    </div>
                </div>
                <div class="modal-footer pt-0">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Yes</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>

    function DeleteCategory(id) {
        $("#Category_ID_Delete").val(id);
    }

    function EditCategory(id, title) {
        $("#categoryId").val(id);
        $("#updateTitle").val(title);
    }
</script>

